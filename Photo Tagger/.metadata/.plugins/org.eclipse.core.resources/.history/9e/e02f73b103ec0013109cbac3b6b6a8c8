
//Imports are listed in full to show what's being used
//could just import javax.swing.* and java.awt.* etc..
import javax.swing.JFrame;
import javax.swing.JPanel;
import javax.swing.JComboBox;
import javax.swing.JButton;
import javax.swing.JLabel;
import javax.swing.JList;

import java.awt.BorderLayout;
import java.awt.FlowLayout;
import java.awt.event.ActionListener;
import java.awt.event.ActionEvent;

public class PhotoTaggerGUI {
	
	public static void main(String[] args) {    
        new PhotoTaggerGUI();
    }

	public PhotoTaggerGUI(){
        
		//Set up frame
		JFrame guiFrame = new JFrame();
		guiFrame.setTitle("Photo Tagger");
		guiFrame.setSize(400, 400);
		guiFrame.setLocationRelativeTo(null);
		guiFrame.setLayout(new FlowLayout());
		
		//Set up disk location
		JPanel diskPanel = new JPanel();
		JLabel diskLabel = new JLabel("Disk Location:");
		diskLabel.setLocation(200, 100);
		
		//Set up  name
		JLabel nameLabel = new JLabel("Name:");
		nameLabel.setLocation(100, 200);
		
		//Set up device name
		JLabel deviceNameLabel = new JLabel("Device Name:");
		deviceNameLabel.setLocation(200, 200);

		//Set up time interval
		JLabel timeLabel = new JLabel("Time Interval:");
		timeLabel.setLocation(300, 300);

		//Set up frame
		guiFrame.add(diskLabel);
		guiFrame.add(nameLabel);
		guiFrame.add(deviceNameLabel);
		guiFrame.add(timeLabel);

		
		//make sure the JFrame is visible
        guiFrame.setVisible(true);
	
	}

}
