import javax.swing.*;

// Name Panel for GUI
@SuppressWarnings("serial")
public class userName extends JPanel{

	private String name; 
	
	/*
	* name()
	* 
	* parameters: 
	* 	none
	* returns: 
	* 	none
	*
	*constructor - sets up gui for this panel
	*/
	public userName(){
		//Label stating this is name text field
		JLabel userNameLabel = new JLabel("User Name:");
		//Text Field
		JTextField userNameTextField = new JTextField(25);
			
		
		//Add to panel
		this.add(userNameLabel);
		this.add(nameTextField);
	}
	
	/*
	* getName()
	*
	* parameters: 
	* 	none
	* returns: 
	* 	String - name of user
	* 
	* returns the name
	*/
	public String getName(){
		//return the name
		return name;
	}
	
}
